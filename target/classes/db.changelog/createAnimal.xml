<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">


    <changeSet id="33d4e9bc-7210-47c3-9617-c56ab7c0750d" author="juan.prada" failOnError="true">

        <createTable tableName="animal">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="name" type="varchar(120)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="sex" type="char(1)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="weight" type="float">
                <constraints nullable="false"/>
            </column>
            <column name="age" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="height" type="float">
                <constraints nullable="false"/>
            </column>
            <column name="arriveDate" type="date">
                <constraints nullable="false" checkConstraint= "sysdate >= arriveData"/>
            </column>
            <column name="fatherId" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="motherId" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>